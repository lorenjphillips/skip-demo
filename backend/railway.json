{
    "build": {
      "builder": "DOCKERFILE",
      "dockerfilePath": "Dockerfile"
    },
    "deploy": {
      "startCommand": "python main.py",
      "healthcheckPath": "/health",
      "healthcheckTimeout": 100,
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    },
    "volumes": [
      {
        "path": "/data/chroma_db",
        "name": "chromadb-volume",
        "mount": "volume"
      }
    ]
  }